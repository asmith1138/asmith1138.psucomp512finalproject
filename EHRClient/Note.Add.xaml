<Window x:Class="EHR.Client.NoteAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EHR.Client"
        mc:Ignorable="d"
        Title="Add a Note" Height="250" Width="300">
    <Grid>
        <Label Name="PatientName" Content="Patient Name" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="Note" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="100"/>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="180,180,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <RichTextBox Name="NoteText" HorizontalAlignment="Left" Margin="15,90,0,0" VerticalAlignment="Top" Height="60" Width="200"/>

    </Grid>
</Window>
